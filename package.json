    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.2",
    "@xenova/transformers": "^2.6.0",
    "dotenv": "^16.0.3",
    "fastify": "^5.3.2",
    "node-fetch": "^3.3.2",
    "pdf-parse": "1.1.1",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vitest": "^1.3.1"
  }
}
